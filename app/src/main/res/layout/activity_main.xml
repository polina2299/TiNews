<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user.tnews.MainActivity">

    <Button
            android:text="@string/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onNews"
            android:id="@+id/button1"
            tools:layout_constraintTop_creator="1" android:layout_marginStart="25dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="25dp"/>
    <ListView
            android:layout_width="359dp"
            android:id="@+id/lv"
            android:layout_height="305dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp" tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"/>
</android.support.constraint.ConstraintLayout>
